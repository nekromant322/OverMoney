<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-subscriptions-table" author="Anton Cherkas">
        <createTable tableName="subscriptions">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chat_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="payment_id" type="varchar(255)"/>
            <column name="start_date" type="timestamp"/>
            <column name="end_date" type="timestamp"/>
            <column name="is_active" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="payment_url" type="varchar(512)"/>
            <column name="payment_url_expires" type="timestamp"/>
        </createTable>

        <createIndex tableName="subscriptions" indexName="idx_subscriptions_chat_id">
            <column name="chat_id"/>
        </createIndex>

        <createIndex tableName="subscriptions" indexName="idx_subscriptions_payment_id">
            <column name="payment_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>